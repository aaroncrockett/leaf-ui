{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@helpers/*": ["helpers/*"],
      "@providers/*": ["providers/*"],
      "@utils/*": ["utils/*"]
    },
    "types": [
      "bun-types" // add Bun global
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/index.jsx", "providers/withLayout.jsx.jsx"],
  "exclude": ["node_modules"]
}
